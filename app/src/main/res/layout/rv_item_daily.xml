<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDayName"
        style="@style/dailyTextViewItems"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivDayWeatherIcon"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:src="@drawable/i04d"
        app:layout_constraintBottom_toBottomOf="@+id/tvDayName"
        app:layout_constraintStart_toEndOf="@+id/tvDayName"
        app:layout_constraintTop_toTopOf="@+id/tvDayName"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/tvDayWeatherDesc"
        style="@style/dailyTextViewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Skye"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/ivDayWeatherIcon"
        app:layout_constraintStart_toEndOf="@+id/ivDayWeatherIcon"
        app:layout_constraintTop_toTopOf="@+id/ivDayWeatherIcon" />

    <TextView
        android:id="@+id/tvDayWeatherTemp"
        style="@style/dailyTextViewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvDayWeatherDesc"
        app:layout_constraintStart_toEndOf="@+id/tvDayWeatherDesc"
        app:layout_constraintTop_toTopOf="@+id/tvDayWeatherDesc" />

    <View
        android:id="@+id/divider55"
        android:layout_width="369dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDayWeatherIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>